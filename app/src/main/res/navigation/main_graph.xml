<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/wallets">

    <fragment
        android:id="@+id/wallets"
        android:name="me.rubl.loftcoin.ui.wallets.WalletsFragment"
        android:label="@string/wallets"
        tools:layout="@layout/fragment_wallets" />
    <fragment
        android:id="@+id/rates"
        android:name="me.rubl.loftcoin.ui.rates.RatesFragment"
        android:label="@string/rates"
        tools:layout="@layout/fragment_rates" />
    <fragment
        android:id="@+id/converter"
        android:name="me.rubl.loftcoin.ui.converter.ConverterFragment"
        android:label="@string/converter"
        tools:layout="@layout/fragment_converter" />
    <dialog
        android:id="@+id/currency_dialog"
        android:name="me.rubl.loftcoin.ui.currency.CurrencyDialog"
        android:label="CurrencyDialog"
        tools:layout="@layout/dialog_currency"/>

    <dialog
        android:id="@+id/coins_sheet"
        android:name="me.rubl.loftcoin.ui.converter.CoinsSheet"
        android:label="CurrencyDialog"
        tools:layout="@layout/dialog_currency"/>

</navigation>